<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <br>
      <h1>Upcoming Events</h1>
      <% if current_user&.admin? %>
        <h2><%= link_to 'New Event', new_event_path %></h2>
      <% end %>
      <br>
    </div>
  </div>
  <% @events.each do |event| %>
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <h2><%= link_to event.title, event %><span style="float:right"><%= event.starts_at.strftime("%A, %B %e") %></span></h2>
          </div>
          <ul class="list-group">
            <li class="list-group-item"><h4><%= event.description.gsub(/\n/, '<br/>').html_safe %></h4></li>
          </ul>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>


