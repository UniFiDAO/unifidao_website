<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <br>
      <h1>Upcoming Events</h1>
      <% if current_user&.admin? %>
        <h1><%= link_to 'New Event', new_event_path %></h1>
      <% end %>
      <br>
    </div>
  </div>
  <% @events.each do |event| %>
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <h1><%= link_to event.title, event %><span style="float:right"><%= event.starts_at.strftime("%A, %B %e") %></span></h1>
          </div>
          <ul class="list-group">
            <li class="list-group-item"><h3><%= markdown(event.description) %></h3></li>
          </ul>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <% User.find(User.team.joins(:logo_attachment).where.not(name: nil).pluck(:id).sample(6)).each do |user|%>
      <div class="col-2">
        <h3 class="disable"><%= link_to user&.team&.name || user.name, user_path(user) %></h3>

        <% if user.logo.attached? %>
          <%= link_to(image_tag(user.logo, width: "100%"), user_path(user), style: 'text-decoration: none;border: 0;', class: 'imglink') %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<br><br><br>

