<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <br>
      <hr>
      <h1><%= @team.name %></h1>
      <% if @team.users.find_by id: current_user.id %>
      <h2><%= link_to 'Edit', edit_team_path(@team) %></h2>
      <% end %>
      <br>
    </div>
  </div>
  <div class="row" style="background-color: #ddd;padding: 20px;">
    <div class="col-lg-6"  >
      <% if @team.logo_image %>
        <%= image_tag @team.logo_image, width: "100%" %>
      <% end %>
    </div>
    <div class="col-lg-6">
      <% if @team.description %>
        <div class="card">
          <div class="card-body">
            <h1><%= @team.description.gsub(/(?:\n\r?|\r\n?)/, '<br>').html_safe %></h1>
          </div>
        </div>
      <% end %>
      <div class="card">
        <div class="card-body">
          <% if @team.website %><h3><%= link_to 'Website', @team.website.to_http, :target => "_blank" %></h3><% end %>
          <% if @team.twitter %><h3><%= link_to 'Twitter', @team.twitter.to_http, :target => "_blank" %></h3><% end %>
          <% if @team.telegram %><h3><%= link_to 'Telegram', @team.telegram.to_http, :target => "_blank" %></h3><% end %>
          <% if @team.discord %><h3><%= link_to 'Discord', @team.discord.to_http, :target => "_blank" %></h3><% end %>
          <% if @team.github %><h3><%= link_to 'Github', @team.github.to_http, :target => "_blank" %></h3><% end %>
          <% if @team.uniswap_pool %><h3><%= link_to 'Uniswap Pool', @team.uniswap_pool.to_http, :target => "_blank" %></h3><% end %>
        </div>
      </div>
      <% unless user_signed_in? %>
        <center><br><br><br>
          <%= button_to 'Join the UniFI DAO', new_user_registration_path, :method => :get,  :class => "btn btn-primary btn-lg"%><br>
          <%= button_to 'Sign In', new_email_link_path, :method => :get,  :class => "btn btn-secondary btn-lg"%>
        </center>
      <% end %>
    </div>
  </div>
</div>
