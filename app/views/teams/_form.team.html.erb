<%= form_with(model: team, local: true) do |f| %>
  <div class="field">
    <%= f.text_field :name, class: "form-control", style: "width:300px;", placeholder: "Project Name"%>
  </div>

  <div class="field">
    <%= f.text_field :website, class: "form-control", style: "width:300px;", placeholder: "Website"%>
  </div>

  <div class="field">
    <%= f.text_field :twitter, class: "form-control", style: "width:300px;", placeholder: "Twitter"%>
  </div>

  <div class="field">
    <%= f.text_field :telegram, class: "form-control", style: "width:300px;", placeholder: "Telegram" %>
  </div>

  <div class="field">
    <%= f.text_field :discord, class: "form-control", style: "width:300px;", placeholder: "Discord" %>
  </div>

  <div class="field">
    <%= f.text_field :github, class: "form-control", style: "width:300px;", placeholder: "Github" %>
  </div>

  <div class="field">
    <%= f.text_field :uniswap_pool, class: "form-control", style: "width:300px;", placeholder: "Uniswap Pool" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description,  class: "form-control", style: "width:300px;", rows: "3" %>
  </div>

  <div class="field">
    <%= f.label "Logo" %>&nbsp;<%= f.file_field :logo, class: "form-control-file"  %>
  </div>


  <div class="actions">
    <%= f.submit "Complete Registration", class: 'btn btn-primary btn-lg' %>
  </div>

<% end %>
