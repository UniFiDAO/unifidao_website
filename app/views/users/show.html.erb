<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <br>
      <hr>
      <h1><%= @user.name %></h1>
      <% if @user.id == current_user.id %>
        <h2><%= link_to 'Edit', edit_user_path(@user) %></h2>
      <% end %>
      <br>
    </div>
  </div>
  <div class="row" style="background-color: #ddd;padding: 20px;">
    <div class="col-lg-6"  >
      <% if @user.logo.attached? %>
        <%= image_tag @user.logo, width: "100%" %>
      <% end %>
    </div>
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <h2><%= @user.name %></h2>
          <% if @user.website %><h3><%= link_to 'Website', @user.website.to_http, :target => "_blank" %></h3><% end %>
          <% if @user.partner %><h3>Partner: <%= @user.partner %></h3><% end %>
          <% if @user.linkedin %><h3><%= link_to 'LinkedIn', @user.linkedin.to_http, :target => "_blank" %></h3><% end %>
          <% if @user.twitter %><h3><%= link_to 'Twitter', @user.twitter.to_http, :target => "_blank" %></h3><% end %>
          <% if @user.telegram %><h3><%= link_to 'Telegram', @user.telegram.to_http, :target => "_blank" %></h3><% end %>
        </div>
      </div>
      <% unless user_signed_in? %>
        <center><br><br><br>
          <%= button_to 'Join the UniFI DAO', new_user_registration_path, :method => :get,  :class => "btn btn-primary btn-lg"%><br>
          <%= button_to 'Sign In', new_email_link_path, :method => :get,  :class => "btn btn-secondary btn-lg"%>
        </center>
      <% end %>
    </div>
  </div>
</div>
