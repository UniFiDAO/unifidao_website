
<% @user.name %>

<% if @user.logo.attached? %>
  <%= image_tag @user.logo %>
<% end %>



<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <br>
      <hr>
      <h1><%= @user.name %></h1>
      <br>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <% if @user.logo.attached? %>
        <%= image_tag @user.logo %>
      <% end %>
    </div>
    <div class="col-lg-6">
      <h3><%= @user.fund %></h3>
      <h3><%= @user.website %></h3>
      <h3><%= @user.partner %></h3>
      <h3><%= @user.linkedin %></h3>
      <h3><%= @user.twitter %></h3>
      <h3><%= @user.telegram %></h3>
    </div>
  </div>
</div>
