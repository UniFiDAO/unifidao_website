
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <br><br>
        <h2>Choose your profile to Join the DAO</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <%= f.radio_button :user_type, 'team' %> Register as Cosmos Start Up Team<br /><br />
          <%= f.radio_button :user_type, 'investor' %> Register as Investor<br /><br />

          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width:300px;", placeholder: "Registration Email Address" %>
          </div>
<br>
          <% random_string = SecureRandom.hex %>
          <%= f.hidden_field :password, value: random_string %>
          <%= f.hidden_field :password_confirmation, value: random_string %>

          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>

